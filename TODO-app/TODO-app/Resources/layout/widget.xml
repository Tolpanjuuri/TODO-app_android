<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetBackground"
    android:orientation="horizontal"
    android:layout_width="200dp"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="72dip"
        android:layout_height="wrap">
        <ImageView
            android:id="@+id/widgetAnnouncementIcon"
            android:src="@drawable/settingsvector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/default_description" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/widgetMedium"
            android:text="HelloAppWidget"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/widgetSmall"
            android:text="Last refresh: 00:00"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </LinearLayout>
</LinearLayout>