<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:animateLayoutChanges="true"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomrounded"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:id="@+id/Header">
        <LinearLayout
            android:visibility="visible"

            android:animateLayoutChanges="true"
            android:paddingTop="20dp"
            android:id="@+id/mainHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/NavBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/Settings"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded10px"
                    android:padding="7dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/settingsvector"
                        android:contentDescription="@string/default_description" />
                </RelativeLayout>
                <Space

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:paddingLeft="15dp"
                    android:id="@+id/SearchBar"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded10px"
                    android:text="@string/search"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/textSecondary"/>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/ShowAll"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded10px"
                    android:text="@string/show_all"
                    android:textAllCaps="false"
                    android:textColor="@color/textSecondary"/>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/NavBarSearch"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <EditText
                    android:paddingLeft="15dp"
                    android:id="@+id/SearchBarField"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded10px"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:inputType="text" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/CreateTask"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:background="@drawable/rounded50px"
                    android:backgroundTint="@color/mainblue"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:overScrollMode="never"
                android:scrollbars="none">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/mainblue">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/date1"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="@string/date1string"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/buttonGrey">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/date2"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="@string/date2string"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:gravity="center_horizontal"
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:background="@drawable/calendar_item"
                            android:backgroundTint="@color/buttonGrey">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/date3"
                                android:textColor="@color/white"
                                android:textSize="30dp"
                                android:textStyle="bold"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="@string/date3string"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold"/>

                        </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:gravity="center_horizontal"
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:background="@drawable/calendar_item"
                            android:backgroundTint="@color/buttonGrey">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/date4"
                                android:textColor="@color/white"
                                android:textSize="30dp"
                                android:textStyle="bold"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="@string/date4string"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold"/>

                        </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/buttonGrey">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/date5"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="@string/date5string"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/buttonGrey">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/date6"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="@string/date6string"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/buttonGrey">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/date7"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="@string/date7string"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/CreateTaskHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_task_header"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_name_header"
                    android:textSize="15dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:inputType="text" 
                    android:background="@drawable/rounded10px"
                    android:backgroundTint="@color/buttonGrey"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date_select_header"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
/>
                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="70dp"
                     android:orientation="horizontal"
                    android:layout_marginBottom="15dp">
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:id="@+id/DayArrowUp"
                            android:clickable="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_horizontal">
                            <Button
                                android:layout_alignParentTop="true"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@drawable/arrow"
                                />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/DayInput"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/rounded10px"
                            android:inputType="date" 
                            android:textAlignment="center"
                            android:textColor="@color/white"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:id="@+id/DayArrowDown"
                            android:clickable="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal">
                            <Button
                                android:layout_alignParentBottom="true"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@drawable/arrowdown"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:id="@+id/MonthArrowUp"
                            android:clickable="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_horizontal">
                            <Button
                                android:layout_alignParentTop="true"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@drawable/arrow"
                                />
                        </RelativeLayout>
                        <EditText
                            android:id="@+id/MonthInput"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/rounded10px"
                            android:inputType="date"
                            android:textAlignment="center"
                            android:textColor="@color/white"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:id="@+id/MonthArrowDown"
                            android:clickable="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal">
                            <Button
                                android:layout_alignParentBottom="true"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@drawable/arrowdown"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:id="@+id/YearArrowUp"
                            android:clickable="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_horizontal">
                            <Button
                                android:layout_alignParentTop="true"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@drawable/arrow"
                                />
                        </RelativeLayout>
                        <EditText
                            android:id="@+id/YearInput"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/rounded10px"
                            android:inputType="date" 
                            android:textAlignment="center"
                            android:textColor="@color/white"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:id="@+id/YearArrowDown"
                            android:clickable="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal">
                            <Button
                                android:layout_alignParentBottom="true"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@drawable/arrowdown"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded50px"
                        android:backgroundTint="@color/mainblue"
                        android:id="@+id/AddTask"
                        android:text="@string/add"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
   
