                    android:text="@string/show_all">
                </TextView>
                </ImageButton>-->
            <Button
                android:layout_width="106dp"
                android:layout_height="33dp"
                android:background="@drawable/top_nav_items"
                app:backgroundTint="#38383C"
                android:text=""/>
            <ImageButton
                android:layout_alignParentRight="true"
                android:layout_width="200dp"
                android:layout_height="33dp"
                android:background="@drawable/top_nav_items"
                android:backgroundTint="#38383C"
                android:contentDescription="@string/default_description" />
            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CreateTaskLayout"
            android:layout_below="@id/NavBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="@string/date"
                android:textColor="#FFFFFF"
                android:gravity="top"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_marginBottom="0.0dp" >

            </TextView>

        <ImageButton
            android:id="@+id/CreateTask"
            android:backgroundTint="@color/mainblue"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner"
            android:contentDescription="@string/default_description"
            android:layout_alignParentRight="true"

            android:clickable="true"/>
        </RelativeLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:columnCount="4"
            android:useDefaultMargins="true"
            android:layout_marginBottom="22dp">
            <Button
                android:layout_width="66dp"
                android:layout_height="70dp"
                android:background="@drawable/calendar_item"
                android:backgroundTint="@color/mainblue"/>
            <Button
                android:layout_marginLeft="14dp"
                android:layout_width="66dp"
                android:layout_height="70dp"
                android:background="@drawable/calendar_item"
                android:backgroundTint="@color/buttonGrey"/>

            <Button
                android:layout_marginLeft="14dp"
                android:layout_width="66dp"
                android:layout_height="70dp"
                android:background="@drawable/calendar_item"
                android:backgroundTint="@color/buttonGrey"/>
            <Button
                android:layout_marginLeft="14dp"
                android:layout_width="66dp"
                android:layout_height="70dp"
                android:background="@drawable/calendar_item"
                android:backgroundTint="@color/buttonGrey"/>
        </GridLayout>
    </RelativeLayout>


    <ScrollView

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:id="@+id/scrollView1"
        android:background="#000000">
        <TableLayout
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="21dp">
                <Button
                    android:background="@drawable/task_card"
                    android:layout_width="333dp"
                    android:layout_height="68dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="21dp">
                <Button
                    android:background="@drawable/task_card"
                    android:layout_width="333dp"
                    android:layout_height="68dp"/>
            </TableRow>
                        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="21dp">
                <Button
                    android:background="@drawable/task_card"
                    android:layout_width="333dp"
                    android:layout_height="68dp"/>
            </TableRow>



        </TableLayout>
    </ScrollView>

   
</RelativeLayout>